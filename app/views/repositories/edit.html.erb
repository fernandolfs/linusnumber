<h1>Editing repository</h1>

<% form_for(@repository) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :uri %><br />
    <%= f.text_field :uri %>
  </p>
  <p>
    <%= f.label :local_path %><br />
    <%= f.text_field :local_path %>
  </p>
  <p>
    <%= f.label :last_updated %><br />
    <%= f.date_select :last_updated %>
  </p>
  <p>
    <%= f.label :last_parsed_revision %><br />
    <%= f.text_field :last_parsed_revision %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @repository %> |
<%= link_to 'Back', repositories_path %>